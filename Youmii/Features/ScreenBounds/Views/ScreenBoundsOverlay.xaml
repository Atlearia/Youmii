<Window x:Class="Youmii.Features.ScreenBounds.Views.ScreenBoundsOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Screen Bounds"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Cursor="Cross"
        WindowStartupLocation="Manual"
        Left="0"
        Top="0">

    <Grid>
        <!-- Dark overlay -->
        <Rectangle x:Name="DarkOverlay" Fill="#88000000" />

        <!-- Selection rectangle (cut-out effect) -->
        <Canvas x:Name="SelectionCanvas">
            <!-- Border showing selected area -->
            <Border x:Name="SelectionBorder"
                    BorderBrush="#FFE91E63"
                    BorderThickness="3"
                    Background="Transparent"
                    Visibility="Collapsed"
                    CornerRadius="4">
                <Border.Effect>
                    <DropShadowEffect Color="#FFE91E63" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                </Border.Effect>
            </Border>
        </Canvas>

        <!-- Instructions panel -->
        <Border x:Name="InstructionsPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                Background="#EE1a1a2e"
                CornerRadius="12"
                Padding="24,16">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Set Screen Bounds"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FFE91E63"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Click and drag to select the area where your character can move."
                           FontSize="14"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Press ESC to cancel - Release mouse to confirm"
                           FontSize="12"
                           Foreground="#AAA"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Size indicator -->
        <Border x:Name="SizeIndicator"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#EE1a1a2e"
                CornerRadius="6"
                Padding="12,6"
                Visibility="Collapsed">
            <TextBlock x:Name="SizeText"
                       FontSize="12"
                       Foreground="White"
                       FontFamily="Consolas"/>
        </Border>
    </Grid>
</Window>
