<Window x:Class="Youmii.Features.Games.Snake.Views.SnakeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Snake"
        Width="400"
        Height="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE8F5E9" Offset="0"/>
            <GradientStop Color="#FFC8E6C9" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#FF4CAF50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}"
                                Background="White"
                                BorderBrush="#FFC8E6C9"
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE8F5E9"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="{StaticResource BackgroundGradient}" 
            BorderBrush="#FFC8E6C9" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#804CAF50" BlurRadius="25" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="16,12,16,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="??" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Snake" FontSize="20" FontWeight="Bold" Foreground="#FF4CAF50"/>
                </StackPanel>

                <Button Grid.Column="1" Width="28" Height="28" Click="CloseButton_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse x:Name="bg" Fill="Transparent"/>
                                <TextBlock Text="?" FontSize="12" Foreground="#FF757575"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Fill" Value="#204CAF50"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Score -->
            <Border Grid.Row="1" Margin="16,12,16,8"
                    Background="White" CornerRadius="12" Padding="12,8"
                    BorderBrush="#FFC8E6C9" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Score" FontSize="10" Foreground="#FF9E9E9E" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Score}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FF4CAF50" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Column="1" Width="1" Background="#FFC8E6C9"/>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="High Score" FontSize="10" Foreground="#FF9E9E9E" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding HighScore}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FF8BC34A" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Game Board -->
            <Border Grid.Row="2" Margin="16,0,16,0"
                    HorizontalAlignment="Center"
                    Background="#FF1B5E20" CornerRadius="12" Padding="4"
                    BorderBrush="#FF4CAF50" BorderThickness="3">
                <Border.Effect>
                    <DropShadowEffect Color="#FF4CAF50" BlurRadius="15" ShadowDepth="3" Opacity="0.25"/>
                </Border.Effect>

                <Grid>
                    <Canvas x:Name="GameCanvas" 
                            Width="300" Height="300"
                            Background="#FF2E7D32"
                            ClipToBounds="True"/>
                    
                    <!-- Start/Game Over Overlay -->
                    <Border x:Name="OverlayPanel"
                            Background="#80000000" 
                            Visibility="{Binding ShowStartMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="??" FontSize="48" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding StatusText}" 
                                       FontSize="16" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="GameOverPanel"
                            Background="#80000000" 
                            Visibility="{Binding IsGameOver, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="??" FontSize="48" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding StatusText}" 
                                       FontSize="14" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="Press Space to Restart" 
                                       FontSize="12" Foreground="#AAFFFFFF"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Controls Info -->
            <Border Grid.Row="3" Margin="16,12,16,0"
                    Background="White" CornerRadius="10" Padding="10,6"
                    BorderBrush="#FFC8E6C9" BorderThickness="1">
                <TextBlock Text="Use Arrow Keys or WASD to move" 
                           FontSize="11" Foreground="#FF757575"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Start Button -->
            <Button Grid.Row="4" Content="Start Game" 
                    Style="{StaticResource GameButtonStyle}"
                    Command="{Binding StartGameCommand}"
                    HorizontalAlignment="Center"
                    Margin="16,10,16,16"/>
        </Grid>
    </Border>
</Window>
