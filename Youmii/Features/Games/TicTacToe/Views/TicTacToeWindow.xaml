<Window x:Class="Youmii.Features.Games.TicTacToe.Views.TicTacToeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tic Tac Toe"
        Width="400"
        Height="520"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE3F2FD" Offset="0"/>
            <GradientStop Color="#FFBBDEFB" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="CellButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF90CAF9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE3F2FD"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsWinningCell}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFBBDEFB"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#FF2196F3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}"
                                Background="White"
                                BorderBrush="#FF90CAF9"
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE3F2FD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="{StaticResource BackgroundGradient}" 
            BorderBrush="#FF90CAF9" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#802196F3" BlurRadius="25" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="16,12,16,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Tic Tac Toe" FontSize="20" FontWeight="Bold" Foreground="#FF2196F3"/>
                    <TextBlock Text="{Binding ModeDisplay}" 
                               FontSize="12" Foreground="#FF90CAF9" 
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Width="28" Height="28" Click="CloseButton_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse x:Name="bg" Fill="Transparent"/>
                                <TextBlock Text="?" FontSize="12" Foreground="#FF757575"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Fill" Value="#202196F3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Status -->
            <Border Grid.Row="1" Margin="16,12,16,8"
                    Background="White" CornerRadius="12" Padding="12,8"
                    BorderBrush="#FF90CAF9" BorderThickness="2">
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#FF2196F3"/>
            </Border>

            <!-- Game Board -->
            <Border Grid.Row="2" Margin="16,0,16,0"
                    HorizontalAlignment="Center"
                    Background="White" CornerRadius="12" Padding="8"
                    BorderBrush="#FF2196F3" BorderThickness="3">
                <Border.Effect>
                    <DropShadowEffect Color="#FF2196F3" BlurRadius="15" ShadowDepth="3" Opacity="0.25"/>
                </Border.Effect>

                <ItemsControl ItemsSource="{Binding Cells}" Width="280" Height="280">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="3" Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource CellButtonStyle}"
                                    Margin="4"
                                    Command="{Binding DataContext.CellClickedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                <TextBlock Text="{Binding Symbol}" 
                                           FontSize="48" 
                                           FontWeight="Bold"
                                           Foreground="{Binding SymbolColor}"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Controls -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="16,12,16,0">
                <Button Content="New Game" Style="{StaticResource GameButtonStyle}"
                        Command="{Binding NewGameCommand}" Margin="0,0,10,0"/>
                <Button Content="2P" Style="{StaticResource GameButtonStyle}"
                        Command="{Binding ToggleAiCommand}"
                        ToolTip="Toggle vs AI / 2 Players"/>
            </StackPanel>

            <!-- Score -->
            <Border Grid.Row="4" Margin="16,12,16,16"
                    Background="White" CornerRadius="12" Padding="12,8"
                    BorderBrush="#FF90CAF9" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="X (You)" FontSize="10" Foreground="#FF9E9E9E" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding PlayerScore}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FFE91E63" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Column="1" Width="1" Background="#FF90CAF9"/>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Draws" FontSize="10" Foreground="#FF9E9E9E" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Draws}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FF757575" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Column="3" Width="1" Background="#FF90CAF9"/>

                    <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                        <TextBlock Text="O (AI)" FontSize="10" Foreground="#FF9E9E9E" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding AiScore}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FF2196F3" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
