<Window x:Class="Youmii.Features.Games.Views.GamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Games"
        Width="520"
        Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Window.Resources>
        <!-- Gradient Background -->
        <LinearGradientBrush x:Key="GamesBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFCE4EC" Offset="0"/>
            <GradientStop Color="#FFF3E5F5" Offset="0.3"/>
            <GradientStop Color="#FFE8EAF6" Offset="0.6"/>
            <GradientStop Color="#FFEDE7F6" Offset="1"/>
        </LinearGradientBrush>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,12"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFE91E63" Offset="0"/>
                        <GradientStop Color="#FF9C27B0" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Category Tab Style -->
        <Style x:Key="CategoryTabStyle" TargetType="RadioButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Padding="14,8"
                                CornerRadius="15"
                                Background="Transparent"
                                BorderBrush="#FFF8BBD9"
                                BorderThickness="2">
                            <TextBlock x:Name="text" 
                                       Text="{TemplateBinding Content}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="#FF757575"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FFE91E63" Offset="0"/>
                                            <GradientStop Color="#FF9C27B0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                <Setter TargetName="text" Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFE91E63" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFE91E63"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Game Card Style -->
        <Style x:Key="GameCardStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="card" 
                                Width="145" Height="170"
                                CornerRadius="16"
                                Background="White"
                                BorderBrush="#FFF8BBD9"
                                BorderThickness="2">
                            <Border.Effect>
                                <DropShadowEffect Color="#40E91E63" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Icon Area -->
                                <Border Grid.Row="0" 
                                        CornerRadius="14,14,0,0"
                                        Margin="2,2,2,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFFCE4EC" Offset="0"/>
                                            <GradientStop Color="#FFF8BBD9" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="{Binding Icon}"
                                               FontSize="48"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Info Area -->
                                <StackPanel Grid.Row="1" Margin="10,8,10,10">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#FF424242"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Category}"
                                               FontSize="10"
                                               Foreground="#FF9E9E9E"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                
                                <!-- Unavailable Overlay -->
                                <Border x:Name="unavailableOverlay"
                                        Grid.RowSpan="2"
                                        CornerRadius="14"
                                        Background="#80FFFFFF"
                                        Visibility="Collapsed">
                                    <TextBlock Text="Coming Soon"
                                               FontSize="11"
                                               FontWeight="Medium"
                                               Foreground="#FF9E9E9E"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="card" Property="BorderBrush" Value="#FFE91E63"/>
                                <Setter TargetName="card" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFE91E63" BlurRadius="15" ShadowDepth="4" Opacity="0.35"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="card" Property="Background" Value="#FFFCE4EC"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                <Setter TargetName="unavailableOverlay" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="20" Background="{StaticResource GamesBackgroundGradient}" 
            BorderBrush="#FFF8BBD9" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#80E91E63" BlurRadius="25" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="20,15,20,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Games" FontSize="20" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFE91E63" Offset="0"/>
                                <GradientStop Color="#FF9C27B0" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1" Width="28" Height="28" 
                        Click="CloseButton_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse x:Name="bg" Fill="Transparent"/>
                                <TextBlock Text="X" FontSize="12" Foreground="#FF757575"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Fill" Value="#20E91E63"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Category Tabs -->
            <ScrollViewer Grid.Row="1" Margin="20,15,20,5"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="All" 
                                 Style="{StaticResource CategoryTabStyle}"
                                 IsChecked="{Binding IsAllSelected, Mode=OneWay}"
                                 Command="{Binding SelectCategoryCommand}"
                                 CommandParameter="All"
                                 GroupName="Categories"/>
                    <RadioButton Content="Board" 
                                 Style="{StaticResource CategoryTabStyle}"
                                 Command="{Binding SelectCategoryCommand}"
                                 CommandParameter="Board"
                                 GroupName="Categories"/>
                    <RadioButton Content="Puzzle" 
                                 Style="{StaticResource CategoryTabStyle}"
                                 Command="{Binding SelectCategoryCommand}"
                                 CommandParameter="Puzzle"
                                 GroupName="Categories"/>
                    <RadioButton Content="Card" 
                                 Style="{StaticResource CategoryTabStyle}"
                                 Command="{Binding SelectCategoryCommand}"
                                 CommandParameter="Card"
                                 GroupName="Categories"/>
                    <RadioButton Content="Arcade" 
                                 Style="{StaticResource CategoryTabStyle}"
                                 Command="{Binding SelectCategoryCommand}"
                                 CommandParameter="Arcade"
                                 GroupName="Categories"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Games Grid -->
            <ScrollViewer Grid.Row="2" Margin="20,10,20,20"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding FilteredGames}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource GameCardStyle}"
                                    Command="{Binding DataContext.LaunchGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Id}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
