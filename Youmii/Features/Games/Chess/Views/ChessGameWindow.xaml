<Window x:Class="Youmii.Features.Games.Chess.Views.ChessGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Youmii.Features.Games.Chess.Converters"
        mc:Ignorable="d"
        Title="Chess"
        Width="520"
        Height="780"
        MinWidth="520"
        MinHeight="780"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToTagConverter x:Key="BoolToTagConverter"/>
        
        <!-- Gradient Background -->
        <LinearGradientBrush x:Key="ChessBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFCE4EC" Offset="0"/>
            <GradientStop Color="#FFF3E5F5" Offset="0.3"/>
            <GradientStop Color="#FFE8EAF6" Offset="0.6"/>
            <GradientStop Color="#FFEDE7F6" Offset="1"/>
        </LinearGradientBrush>

        <!-- Light Square -->
        <SolidColorBrush x:Key="LightSquareBrush" Color="#FFFCE4EC"/>
        
        <!-- Dark Square -->
        <SolidColorBrush x:Key="DarkSquareBrush" Color="#FFF8BBD9"/>
        
        <!-- Selected Square -->
        <SolidColorBrush x:Key="SelectedSquareBrush" Color="#FFE91E63"/>
        
        <!-- Valid Move Square -->
        <SolidColorBrush x:Key="ValidMoveSquareBrush" Color="#809C27B0"/>

        <!-- Chess Square Style -->
        <Style x:Key="ChessSquareStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="squareBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0">
                                <!-- Piece -->
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="36"
                                           FontWeight="Normal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Selection Highlight -->
                            <Border x:Name="selectionBorder"
                                    BorderBrush="{StaticResource SelectedSquareBrush}"
                                    BorderThickness="3"
                                    Visibility="Collapsed"/>
                            
                            <!-- Valid Move Indicator -->
                            <Ellipse x:Name="validMoveIndicator"
                                     Width="16" Height="16"
                                     Fill="{StaticResource ValidMoveSquareBrush}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="squareBorder" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="selectionBorder" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsValidMove}" Value="True">
                                <Setter TargetName="validMoveIndicator" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Label Style -->
        <Style x:Key="StatusLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#FF424242"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Game Button Style -->
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#FFE91E63"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}"
                                Background="White"
                                BorderBrush="#FFF8BBD9"
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFFCE4EC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFE91E63"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFF8BBD9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Difficulty Button Style -->
        <Style x:Key="DifficultyButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#FF757575"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                Background="#FFF5F5F5"
                                BorderBrush="#FFE0E0E0"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFFCE4EC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFE91E63"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="border" Property="Background" Value="#FFE91E63"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFE91E63"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="20" Background="{StaticResource ChessBackgroundGradient}" 
            BorderBrush="#FFF8BBD9" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#80E91E63" BlurRadius="25" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="16,12,16,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Chess" FontSize="20" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFE91E63" Offset="0"/>
                                <GradientStop Color="#FF9C27B0" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="{Binding AiModeDisplay}" 
                               FontSize="12" 
                               Foreground="#FF9E9E9E" 
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1" Width="28" Height="28" 
                        Click="CloseButton_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse x:Name="bg" Fill="Transparent"/>
                                <TextBlock Text="?" FontSize="12" Foreground="#FF757575"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Fill" Value="#20E91E63"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Difficulty Selector -->
            <Border Grid.Row="1" Margin="16,10,16,0"
                    Background="White"
                    CornerRadius="10"
                    Padding="10,8"
                    BorderBrush="#FFF8BBD9"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Difficulty Label & Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Difficulty:" FontSize="12" Foreground="#FF757575" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button Content="Easy" 
                                Style="{StaticResource DifficultyButtonStyle}"
                                Command="{Binding SetDifficultyCommand}"
                                CommandParameter="Easy"
                                Tag="{Binding IsEasySelected, Converter={StaticResource BoolToTagConverter}}"
                                Margin="0,0,4,0"/>
                        <Button Content="Medium" 
                                Style="{StaticResource DifficultyButtonStyle}"
                                Command="{Binding SetDifficultyCommand}"
                                CommandParameter="Medium"
                                Tag="{Binding IsMediumSelected, Converter={StaticResource BoolToTagConverter}}"
                                Margin="0,0,4,0"/>
                        <Button Content="Hard" 
                                Style="{StaticResource DifficultyButtonStyle}"
                                Command="{Binding SetDifficultyCommand}"
                                CommandParameter="Hard"
                                Tag="{Binding IsHardSelected, Converter={StaticResource BoolToTagConverter}}"/>
                    </StackPanel>
                    
                    <!-- Mode Toggle -->
                    <Button Grid.Column="2" 
                            Content="2P"
                            ToolTip="Toggle 2 Player / vs AI mode"
                            Style="{StaticResource DifficultyButtonStyle}"
                            Command="{Binding ToggleAiCommand}"/>
                </Grid>
            </Border>

            <!-- Current Turn Indicator -->
            <Border Grid.Row="2" Margin="16,8,16,8"
                    Background="White"
                    CornerRadius="12"
                    Padding="12,8"
                    BorderBrush="#FFF8BBD9"
                    BorderThickness="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Current Turn: " Style="{StaticResource StatusLabelStyle}"/>
                    <TextBlock Text="{Binding CurrentTurnDisplay}" 
                               Style="{StaticResource StatusLabelStyle}"
                               FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFE91E63" Offset="0"/>
                                <GradientStop Color="#FF9C27B0" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="{Binding GameStatus}" 
                               Style="{StaticResource StatusLabelStyle}"
                               Margin="15,0,0,0"
                               Foreground="#FF9C27B0"/>
                </StackPanel>
            </Border>

            <!-- Chess Board -->
            <Border Grid.Row="3" 
                    Margin="16,0,16,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    CornerRadius="12"
                    BorderBrush="#FFE91E63"
                    BorderThickness="3"
                    Background="White">
                <Border.Effect>
                    <DropShadowEffect Color="#FFE91E63" BlurRadius="15" ShadowDepth="3" Opacity="0.25"/>
                </Border.Effect>
                
                <Grid Margin="4">
                    <!-- Chess Board Grid -->
                    <ItemsControl x:Name="BoardGrid" 
                                  ItemsSource="{Binding Squares}"
                                  Width="448" Height="448">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="8" Columns="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource ChessSquareStyle}"
                                        Background="{Binding Background}"
                                        Content="{Binding PieceSymbol}"
                                        Command="{Binding DataContext.SquareClickedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Game Controls -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="16,12,16,0">
                <Button Content="New Game" 
                        Style="{StaticResource GameButtonStyle}"
                        Command="{Binding NewGameCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Undo Move" 
                        Style="{StaticResource GameButtonStyle}"
                        Command="{Binding UndoMoveCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Hint" 
                        Style="{StaticResource GameButtonStyle}"
                        Command="{Binding HintCommand}"/>
            </StackPanel>

            <!-- Score/Captured Pieces -->
            <Border Grid.Row="5" Margin="16,12,16,16"
                    Background="White"
                    CornerRadius="12"
                    Padding="12,8"
                    BorderBrush="#FFF8BBD9"
                    BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- White Captured -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="White Captured" FontSize="10" Foreground="#FF9E9E9E" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding WhiteCapturedPieces}" FontSize="14" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- Divider -->
                    <Border Grid.Column="1" Width="1" Background="#FFF8BBD9" Margin="10,0"/>
                    
                    <!-- Black Captured -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Black Captured" FontSize="10" Foreground="#FF9E9E9E" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding BlackCapturedPieces}" FontSize="14" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
