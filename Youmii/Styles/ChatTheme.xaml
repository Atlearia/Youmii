<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <SolidColorBrush x:Key="PrimaryPinkBrush" Color="#FFE91E63"/>
    <SolidColorBrush x:Key="LightPinkBrush" Color="#FFFCE4EC"/>
    <SolidColorBrush x:Key="SoftPinkBrush" Color="#FFF8BBD9"/>
    <SolidColorBrush x:Key="SoftWhiteBrush" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="#FF424242"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="#FF9C27B0"/>

    <!-- Gradient for chat panel -->
    <LinearGradientBrush x:Key="ChatPanelGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFCE4EC" Offset="0"/>
        <GradientStop Color="#FFF3E5F5" Offset="0.5"/>
        <GradientStop Color="#FFEDE7F6" Offset="1"/>
    </LinearGradientBrush>

    <!-- Kawaii Input Box Style -->
    <Style x:Key="KawaiiInputBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SoftWhiteBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SoftPinkBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryPinkBrush}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource SoftPinkBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15"
                            Padding="4">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="8,0" 
                                          VerticalAlignment="Center"/>
                            <!-- Placeholder text -->
                            <TextBlock x:Name="placeholder"
                                       Text="Type a message... ✨"
                                       Foreground="#FFBDBDBD"
                                       FontStyle="Italic"
                                       Margin="12,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryPinkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryPinkBrush}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#FFE91E63" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#FFF5F5F5"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FFE0E0E0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Kawaii Send Button Style -->
    <Style x:Key="KawaiiSendButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryPinkBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="18,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Padding="{TemplateBinding Padding}"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFE91E63" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FFD81B60"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#FFE91E63" BlurRadius="12" ShadowDepth="3" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FFC2185B"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#FFBDBDBD"/>
                            <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Kawaii Secondary Button Style (for Clear) -->
    <Style x:Key="KawaiiSecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryPinkBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource SoftPinkBrush}"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LightPinkBrush}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryPinkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SoftPinkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Chat Panel Container Style -->
    <Style x:Key="KawaiiChatPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ChatPanelGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SoftPinkBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FFE91E63" BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Kawaii Speech Bubble Style -->
    <Style x:Key="KawaiiSpeechBubbleStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ChatPanelGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SoftPinkBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Padding" Value="15,12"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FFE91E63" BlurRadius="12" ShadowDepth="3" Opacity="0.25"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>